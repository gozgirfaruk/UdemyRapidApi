@model List<HotelProject.EntityLayer.Concrete.AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<body>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title" style="text-align:center">Hizmet Tablosu</h4>
                        <a href="/Role/AddRole/" class="btn btn-outline-primary btn-rounded" style="margin-bottom:5px;">Yeni Rol Ekle</a>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Başlık</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th>@item.Id</th>
                                            <td>@item.Name</td>
                                            <td><a href="/Role/UpdateRole/@item.Id" class="btn btn-outline-dark btn-rounded">Güncelle</a></td>
                                            <td><a href="/Role/DeleteRole/@item.Id" class="btn btn-outline-danger btn-rounded">Sil</a></td>

                                        </tr>
                                    }

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
</body>

