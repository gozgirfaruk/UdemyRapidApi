@model List<ResultServiceDto>
@{
    ViewData["Title"] = "ServiceList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<html lang="en">

<body>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title" style="text-align:center">Hizmet Tablosu</h4>
                        <a href="/Service/AddService/" class="btn btn-outline-primary btn-rounded" style="margin-bottom:5px;">Yeni Hizmet Ekle</a>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Başlık</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th>@item.ServiceID</th>
                                            <td><i class ="@item.ServiceIcon fa-xl"></i> @item.Title</td>
                                            <td><a href="#" class="btn btn-outline-info btn-rounded">Detaylar</a></td>
                                            <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-outline-dark btn-rounded">Güncelle</a></td>
                                            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger btn-rounded">Sil</a></td>

                                        </tr>
                                    }



                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
</body>
</html>