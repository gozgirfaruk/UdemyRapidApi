@model List<ResultRoomDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
   
}



<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title" style="text-align:center">Oda Tablosu</h4>
                        <a href="/AdminRoom/AddRoom/" class="btn btn-outline-primary btn-rounded" style="margin-bottom:5px;">Yeni Oda Ekle</a>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                       
                                        <th>Oda No</th>
                                        <th>Oda Tipi</th>
                                        <th>Fiyat</th>
                                        <th>Detaylar</th>
                                        <th>Güncelle</th>
                                        <th>Sil</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    
                                        <tr>
                                     
                                            <th>@item.RoomNumber</th>
                                            <th><img src="@item.CoverImage" style="height:75px; width:75px; border-radius:15px;"/> @item.Title</th>
                                            <td>@item.Price ₺</td>
                                            <td><a href="#" class="btn btn-outline-info btn-rounded">Detaylar</a></td>
                                            <td><a href="/AdminRoom/UpdateRoom/@item.RoomID" class="btn btn-outline-dark btn-rounded">Güncelle</a></td>
                                            <td><a href="/AdminRoom/DeleteRoom/@item.RoomID" class="btn btn-outline-danger btn-rounded">Sil</a></td>

                                        </tr>
                                    }

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
