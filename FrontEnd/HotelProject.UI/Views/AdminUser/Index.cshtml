@model List<ResultAppUserListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Görsel</th>
                                    <th>Ad Soyad</th>
                                    <th>Şehir</th>
                                    <th>Lokasyon</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="" style="height:50px; width:50px;"></td>
                                        <td>@item.FirstName @item.LastName</td>
                                        <td>@item.City</td>
                                        <td>@item.WorkLocationName</td>
                                        <td><i class="fa fa-circle-o text-success  mr-2"></i> Aktif</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <br />
                        <a href="/Register/Index" class="btn btn-info">Yeni Kullanıcı Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>