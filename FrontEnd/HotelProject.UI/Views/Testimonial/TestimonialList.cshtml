@model List<TestimonialViewModel>
@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<body>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title" style="text-align:center">Personeller Tablosu</h4>
                        <a href="/Staff/AddStaff/" class="btn btn-outline-primary btn-rounded" style="margin-bottom:5px;">Yeni Referans Ekle</a>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Personel Adı</th>
                                        <th>Personel Ünvan</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th>@item.TestimonialID</th>
                                            <td><img src="@item.Image" style="height:50px; width:50px; border-radius:25px;"/> @item.Name</td>
                                            <td>@item.Title</td>
                                            <td><a href="#" class="btn btn-outline-info btn-rounded">Detaylar</a></td>
                                            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-outline-dark btn-rounded">Güncelle</a></td>
                                            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-outline-danger btn-rounded">Sil</a></td>

                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
</body>
</html>