@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title" style="text-align:center">Hakkımızda Tablosu</h4>
                   
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>1</th>th>
                                        <th>Başlık</th>
                                        <th>Açıklama</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th>@item.Title</th>
                                            <td>@item.Description</td>
                                            <td>@item.Title</td>
                                            <td><a href="#" class="btn btn-outline-info btn-rounded">Detaylar</a></td>
                                            <td><a href="/AdminAbout/UpdateAbout/@item.AboutUsID" class="btn btn-outline-dark btn-rounded">Güncelle</a></td>
                                 
                                        </tr>
                                    }

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
