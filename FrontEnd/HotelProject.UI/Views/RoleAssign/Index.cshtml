@model List<HotelProject.EntityLayer.Concrete.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<body>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title" style="text-align:center">Kullanıcı Tablosu</h4>
                    
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>Kullanıcı</th>
                                        <th>Rol Ata</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td><img src="@item.ImageUrl" style="height:50px; width:50px;"/>
                                            @item.FirstName @item.LastName</td>
                                            <td><a href="/RoleAssign/AssignRole/@item.Id" class="btn btn-outline-info btn-rounded">Rol Ata</a></td>
                                   

                                        </tr>
                                    }



                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
</body>
