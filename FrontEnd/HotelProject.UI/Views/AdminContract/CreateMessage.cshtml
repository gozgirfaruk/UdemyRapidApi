@model SendmessageDto
@{
    ViewData["Title"] = "CreateMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Mesajlar</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">İleti</a></li>
        </ol>
    </div>
</div>
<!-- row -->

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="email-left-box">
                        <a href="/AdminContract/CreateMessage/" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
                        <div class="mail-list mt-4">
                            <a href="/AdminContract/Inbox" class="list-group-item border-0 text-primary p-r-0">
                                <i class="fa fa-inbox font-18 align-middle mr-2"></i> <b>Gelen Kutusu</b>
                                <span class="badge badge-primary badge-sm float-right m-t-5">198</span>
                            </a>

                            <a href="/AdminContract/Senbox" class="list-group-item border-0 p-r-0"><i class="fa fa-paper-plane font-18 align-middle mr-2"></i>Giden Kutusu</a>
                            <a href="#" class="list-group-item border-0 p-r-0">
                                <i class="fa fa-star-o font-18 align-middle mr-2">

                                </i>Önemli <span class="badge badge-danger badge-sm float-right m-t-5">47</span>
                            </a>
                            <a href="#" class="list-group-item border-0 p-r-0"><i class="mdi mdi-file-document-box font-18 align-middle mr-2"></i>Spam</a><a href="#" class="list-group-item border-0 p-r-0"><i class="fa fa-trash font-18 align-middle mr-2"></i>Çöp</a>
                        </div>
                        <h5 class="mt-5 m-b-10">Diğer</h5>
                        <div class="list-group mail-list">
                            <a href="#" class="list-group-item border-0"><span class="fa fa-briefcase f-s-14 mr-2"></span>İş</a>  <a href="#" class="list-group-item border-0"><span class="fa fa-sellsy f-s-14 mr-2"></span>Gizli</a>  <a href="#" class="list-group-item border-0"><span class="fa fa-ticket f-s-14 mr-2"></span>Destek</a>  <a href="#" class="list-group-item border-0"><span class="fa fa-tags f-s-14 mr-2"></span>Sosyal</a>
                        </div>
                    </div>
                    <div class="email-right-box">
                        <div role="toolbar" class="toolbar">
                            <div class="btn-group">
                                <button aria-expanded="false" data-toggle="dropdown" class="btn btn-dark dropdown-toggle" type="button">
                                    Mesaj Gönder<span class="caret m-l-5"></span>
                                </button>

                            </div>
                        </div>
                        <form method="post">
                            <div class="compose-content mt-5">

                                <div class="form-group">
                                    <input type="text" class="form-control bg-transparent" asp-for="ReceiverMail" placeholder=" Alıcı Mail">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control bg-transparent" asp-for="ReceiverName" placeholder=" Alıcı Adı">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control bg-transparent" asp-for="Title" placeholder=" Konu">
                                </div>
                                <div class="form-group">
                                    <textarea class="textarea_editor form-control bg-light" rows="15" asp-for="Content" placeholder="Mesajınızı Yazınız ..."></textarea>
                                </div>
                            </div>
                      
                        <div class="text-left m-t-15">
                            <button class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10" type="submit"><i class="fa fa-paper-plane m-r-5"></i> Gönder</button>
                                <a href="/AdminContract/Inbox" class="btn btn-dark m-b-30 m-t-15 f-s-14 p-l-20 p-r-20"><i class="ti-close m-r-5 f-s-12"></i> Vazgeç</a>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
