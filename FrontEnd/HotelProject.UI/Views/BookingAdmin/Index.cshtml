@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h4>Misafir Listesi</h4>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Misafir</th>
                            <th>Giriş Tarihi</th>
                            <th>Çıkış Tarihi</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.Name</td>
                                <td>@item.CheckIn.ToString("dd.MM.yyyy")</td>
                                <td>@item.CheckOut.ToString("dd.MM.yyyy")</td>
                                @{
                                    if (item.Status == false)
                                    {
                                        <td>
                                            <span class="badge badge-primary px-2">Onay Bekliyor</span> 
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <span class="badge badge-primary px-2">Onaylandı</span>
                                        </td>
                                    }
                                }

                                <td><a href="/BookingAdmin/ApproveStatus/@item.BookingID" class="badge badge-success px-5">Onayla</a></td>
                                <td><a href="/BookingAdmin/CancelStatus/@item.BookingID" class="badge badge-danger px-5">İptal Et</a></td>
                                <td><a href="#" class="badge badge-secondary px-5">Beklet</a></td>
                                <td><a href="#" class="badge badge-info px-5">Detaylar</a></td>
                                <td><a href="#" class="badge badge-dark px-5">Güncelle</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- /# card -->
</div>

