@model AddStafViewModel
@{
    ViewData["Title"] = "AddStaff";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Personel Ekleme</h1>

<form method="post">
    <label>Personel Adı</label>
    <input type="text" class="form-control input-rounded" asp-for="Name" >
    <br />
    <label>Personel Ünvanı</label>
    <input type="text" class="form-control input-rounded" asp-for="Title">
    <br />
    <label>Sosyal Medya 1.</label>
    <input type="text" class="form-control input-rounded" asp-for="SocialMedia1" >
    <br />
    <label>Sosyal Medya 2. </label>
    <input type="text" class="form-control input-rounded" asp-for="SocialMedia2">
    <br />
    <label>Sosyal Medya 3.</label>
    <input type="text" class="form-control input-rounded" asp-for="SocialMedia3">
    <br />
    <button type="submit" class="btn btn-outline-success btn-rounded">Personeli Ekle</button>
    <a href="/Staff/StaffList" class="btn btn-outline-secondary btn-rounded">Vazgeç</a>
</form>